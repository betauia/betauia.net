---
import { Icon } from "astro-icon/components";
import BetaLogo from "@assets/logos/beta/base.svg";
import Socials from "@components/widgets/Socials.astro";
---

<footer class="dark:bg-dark-accent bg-accent px-4 pb-6 pt-12 text-white">
  <div class="mx-auto grid max-w-6xl grid-cols-1 gap-10 sm:grid-cols-3">
    <section>
      <h2 class="mb-4 text-center text-base font-semibold uppercase tracking-wide">Kontakt oss</h2>
      <ul class="flex flex-col items-center space-y-2 text-sm">
        <li>
          <a
            href="mailto:post@betauia.net"
            class="inline-flex items-center gap-2 transition hover:opacity-80"
          >
            <Icon name="fa-solid:address-card" /> post@betauia.net
          </a>
        </li>
        <li class="flex items-center justify-center gap-2">
          <Icon name="fa-solid:suitcase" /> Org.nr: 913 777 417
        </li>
        <li class="flex items-center justify-center gap-2 break-words">
          <Icon name="fa-solid:map-marker-alt" /> Jon Lilletuns vei 9,<br />4879 Grimstad
        </li>
      </ul>

      <Socials class="mt-6 justify-center text-lg" />
    </section>

    <section class="text-center">
      <h2 class="mb-4 text-base font-semibold uppercase tracking-wide">Ressurser</h2>
      <ul class="space-y-2 text-sm">
        <li><a href="/om" class="transition hover:opacity-80">Om Beta</a></li>
        <li><a href="/kontakt" class="transition hover:opacity-80">Kontakt</a></li>
        <li>
          <a
            href="https://github.com/betauia/betauia.net"
            target="_blank"
            class="transition hover:opacity-80">GitHub repo</a
          >
        </li>
        <li><a href="/Vedtekter.pdf" class="transition hover:opacity-80">Vedtekter</a></li>
      </ul>
    </section>

    <section class="flex h-full flex-col justify-center text-center">
      <BetaLogo class="mx-auto h-12" />
      <p class="mt-3 text-sm font-semibold">Linjeforeningen for datastudenter</p>
      <a
        href="https://discord.gg/3xBPkDsaXy"
        class="mx-auto mt-2 inline-block rounded-lg border border-dark-fg-base bg-dark-fg-base px-4 py-1 text-sm font-semibold text-accent transition hover:opacity-80 dark:bg-accent dark:text-dark-fg-base"
      >
        Join Discord
      </a>
    </section>
  </div>

  <div class="mt-10 border-t border-white/30 pt-6">
    <div
      class="mx-auto flex max-w-6xl flex-col items-center justify-between gap-3 text-center text-sm sm:flex-row"
    >
      <p>© 2025 BETA Engineering & Technology Association</p>
      <a href="mailto:bedrift@betauia.net" class="hover:opacity-80">Feil på siden? Kontakt oss!</a>
    </div>
  </div>
</footer>
