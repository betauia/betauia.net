---
import katex from "katex";
import "katex/dist/katex.min.css";

interface Props {
  tex: string;
  display?: boolean;
}

const { tex, display = false } = Astro.props;

const html = katex.renderToString(tex, {
  displayMode: display,
  throwOnError: false,
});
---

<span class={display ? "math-display" : "math-inline"} set:html={html} />
