---
export interface Props {
  href: string;
  target?: "_self" | "_blank" | "_parent" | "_top";
  type?: "primary" | "secondary";
  download?: string;
  class?: string;
}

const {
  href,
  target = "_self",
  type = "primary",
  class: extra = "",
  download,
} = Astro.props as Props;

const base =
  "inline-flex items-center justify-center gap-2 rounded-md font-medium border transition-all select-none";

const variants = {
  primary: "bg-accent border-accent text-dark-fg-base hover:opacity-80 shadow-sm hover:shadow-md",
  secondary:
    "bg-bg-raised dark:bg-dark-bg-raised border-fg-muted dark:border-dark-fg-muted text-fg-base dark:text-dark-fg-base hover:text-fg-muted dark:hover:text-dark-fg-muted hover:shadow-md",
};

const padding = "px-4 py-1.5";
const classes = `${base} ${variants[type]} ${padding} ${extra}`;
---

<a href={href} target={target} class={classes} download={download}>
  <slot />
</a>
