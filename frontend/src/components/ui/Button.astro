---
export interface Props {
  text: string;
  href: string;
  target?: "_self" | "_blank" | "_parent" | "_top";
  type?: "primary" | "secondary";
}

const { text, href, target = "_self", type = "primary" } = Astro.props as Props;

const colors =
  type === "primary"
    ? "bg-brand hover:bg-blue-700 hover:border-blue-700 text-white"
    : "text-gray-900 dark:text-white hover:text-white hover:bg-brand";
---

<a
  href={href}
  target={target}
  class=`transition border border-brand font-bold py-2 px-4 rounded ${colors}`>{text}</a
>
