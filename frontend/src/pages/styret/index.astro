---
import BaseLayout from "@layouts/BaseLayout.astro";
import Container from "@components/layout/Container.astro";
import Card from "@components/ui/Card.astro";
import { availableYears, boardData } from "@data/boardMembers";

const boardYears = availableYears.sort((a, b) => parseInt(b) - parseInt(a));
---

<BaseLayout title="Styret">
  <Container class="flex min-h-svh flex-col justify-center">
    <h1 class="mb-4 text-4xl font-bold">Hovedstyret gjennom årene</h1>
    <p class="mb-6 text-fg-muted dark:text-dark-fg-muted">
      Klikk på et år for å se styremedlemmene og deres roller.
    </p>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        boardYears.map(year => {
          const yearData = boardData[year];
          return (
            <Card
              title={year}
              image={yearData?.groupPhoto}
              frame={yearData?.groupPhoto ? "none" : "placeholder"}
              href={`/styret/${year}`}
              highlightText="Les mer"
            />
          );
        })
      }
    </div>

    <Card
      class="mt-12"
      title="Bli med i hovedstyret!"
      text="Hvert år velges et nytt hovedstyre på generalforsamlingen. Er du interessert i å bidra til å drive Beta og skape arrangementer for datastudenter? Da er hovedstyret noe for deg! Hold øye med når generalforsamlingen avholdes, vanligvis i februar."
      href="/kontakt"
      highlightText="Kontakt oss"
    />
  </Container>
</BaseLayout>
