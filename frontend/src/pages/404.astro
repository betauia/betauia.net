---
import PageLayout from "@layouts/PageLayout.astro";
import FullContainer from "@components/containers/FullContainer.astro";
import Button from "@components/ui/Button.astro";
import { Image } from "astro:assets";
import notfoundImage from "@assets/logos/404.png";
---

<PageLayout title="404 - Not Found">
  <FullContainer title="Page Not Found">
    <section
      class="flex min-h-screen flex-col items-center justify-center space-y-6 px-4 py-16 text-center"
    >
      <Image src={notfoundImage} alt="Funny 404 Cat" class="h-auto w-150 rounded-xl shadow-lg -translate-y-[10px]" />

      <div class="flex flex-wrap justify-center gap-4">
        <Button text="Go to Homepage" href="/" />
        <Button text="Go Back" href="javascript:history.back()" type="secondary" />
      </div>
    </section>
  </FullContainer>
</PageLayout>
