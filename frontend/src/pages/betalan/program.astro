---
import Layout from "@layouts/Main.astro";
import BetaLANLayout from "@layouts/BetaLAN-Layout.astro";
import DiscordLogo from "@components/icons/social/Discord.astro";
---

<Layout title="BetaLAN Program">
  <BetaLANLayout backgroundImage="/betalan/jungle-background.jpg">
    <section class="bg-slate-800 bg-opacity-90 mb-4 p-4 sm:p-6 rounded-lg mx-3 sm:m-6 max-w-4xl lg:mx-auto text-yellow-100">
      <div>
        <h1 class="font-bold text-center text-2xl sm:text-3xl mb-6">BetaLAN Program</h1>
        
        <div class="mb-8 sm:mb-10">
          <h2 class="text-lg sm:text-xl font-bold mb-3 text-yellow-300 border-b border-yellow-300 pb-1">Friday</h2>
          <ul class="space-y-0">
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">Opening Hour</span>
              <span class="text-sm sm:text-base">17:00 - 18:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">GameJAM</span>
              <span class="text-sm sm:text-base">18:00 - 19:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">
                <a href="/betalan/tournaments/tekken7/" class="text-yellow-200 hover:text-yellow-300 hover:underline">
                  Tekken 7
                </a>
              </span>
              <span class="text-sm sm:text-base">19:00 - 21:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">
                <a href="/betalan/tournaments/rocket-league/" class="text-yellow-200 hover:text-yellow-300 hover:underline">
                  Rocket League
                </a>
              </span>
              <span class="text-sm sm:text-base">21:00 - 22:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">BetaLAN Gameshow</span>
              <span class="text-sm sm:text-base">23:00 - 00:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 sm:border-none">
              <span class="font-medium">Fall Guys (Saturday night)</span>
              <span class="text-sm sm:text-base">00:00 - 02:00</span>
            </li>
          </ul>
        </div>
        
        <div class="mb-8 sm:mb-10">
          <h2 class="text-lg sm:text-xl font-bold mb-3 text-yellow-300 border-b border-yellow-300 pb-1">Saturday</h2>
          <ul class="space-y-0">
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">League of Legends 1v1</span>
              <span class="text-sm sm:text-base">15:00 - 17:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">Food for participants</span>
              <span class="text-sm sm:text-base">17:00 - 19:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">
                <a href="/betalan/tournaments/ABG/" class="text-yellow-200 hover:text-yellow-300 hover:underline">
                  Agder's Beste Gamer
                </a>
              </span>
              <span class="text-sm sm:text-base">19:00 - 23:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">BetaLAN Gameshow</span>
              <span class="text-sm sm:text-base">23:00 - 00:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 sm:border-none">
              <span class="font-medium">Minecraft Survival Games (Sunday Night)</span>
              <span class="text-sm sm:text-base">00:00 - 02:00</span>
            </li>
          </ul>
        </div>
        
        <div class="mb-6">
          <h2 class="text-lg sm:text-xl font-bold mb-3 text-yellow-300 border-b border-yellow-300 pb-1">Sunday</h2>
          <ul class="space-y-0">
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">Stepmania 5</span>
              <span class="text-sm sm:text-base">12:00 - 14:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">
                <a href="/betalan/tournaments/just-dance/" class="text-yellow-200 hover:text-yellow-300 hover:underline">
                  Just Dance+
                </a>
              </span>
              <span class="text-sm sm:text-base">14:00 - 16:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 border-b border-yellow-900/30 sm:border-none">
              <span class="font-medium">
                <a href="/betalan/tournaments/setup-competition/" class="text-yellow-200 hover:text-yellow-300 hover:underline">
                  Setup Competition
                </a> Closes
              </span>
              <span class="text-sm sm:text-base">15:00</span>
            </li>
            <li class="flex flex-col sm:flex-row justify-between py-3 sm:py-2 sm:border-none">
              <span class="font-medium">Award Ceremony and LAN-closing</span>
              <span class="text-sm sm:text-base">17:00</span>
            </li>
          </ul>
        </div>

        <div class="mt-6 sm:mt-8 mb-2 border-t border-yellow-800 pt-4 text-center">
          <div class="mt-2 sm:mt-4">
            <h3 class="text-base sm:text-lg font-medium mb-2">Join BetaLAN Discord</h3>
            <p class="text-xs sm:text-sm mb-3">Connect with other participants and get real-time updates during the event</p>
            <a href="https://discord.gg/ggUtjr8TSQ" target="_blank" rel="noopener" 
              class="inline-flex items-center gap-2 bg-indigo-700 hover:bg-indigo-600 text-white px-3 sm:px-4 py-1.5 sm:py-2 rounded-md transition-colors text-sm sm:text-base">
              <DiscordLogo width="24" height="24" class="h-5 w-5 sm:h-6 sm:w-6" />
              <span>BetaLAN Discord</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </BetaLANLayout>
</Layout>