---
import BaseLayout from "@layouts/BaseLayout.astro";
import Container from "@components/layout/Container.astro";
import Prose from "@components/semantics/Prose.astro";

import Logo from "@assets/logos/beta/base.svg";
import { brandingColors } from "@data/colors";
---

<BaseLayout title="Branding">
  <Container>
    <Prose>
      <h1>Branding</h1>
<!-- 
      <h2>Bruk</h2>

      <h2>Logoer</h2>

      <a
        href={Logo.src}
        download="beta-logo.svg"
      >
        Last ned logo
      </a> -->

      <h2>Farger</h2>

      <div
        class="
          not-prose
          mt-6
          grid
          grid-cols-1
          gap-4
          sm:grid-cols-2
          lg:grid-cols-3
        "
      >
        {
          brandingColors.map(color => {
            const isSame = color.light === color.dark;

            return (
              <div
                class="
                  rounded-lg
                  bg-bg-raised dark:bg-dark-bg-raised
                  p-4
                  text-fg-base dark:text-dark-fg-base
                "
              >
                <!-- Color previews -->
                <div class="mb-3 flex gap-2">
                  <div
                    class="h-8 w-8 rounded cursor-pointer hover:opacity-75 border border-fg-muted dark:border-dark-fg-muted"
                    style={`background:${color.light}`}
                    onclick={`navigator.clipboard.writeText('${color.light}')`}
                    title="Klikk for å kopiere"
                  />
                  {
                    !isSame && (
                      <div
                        class="h-8 w-8 rounded cursor-pointer hover:opacity-75 border border-fg-muted dark:border-dark-fg-muted"
                        style={`background:${color.dark}`}
                        onclick={`navigator.clipboard.writeText('${color.dark}')`}
                        title="Klikk for å kopiere"
                      />
                    )
                  }
                </div>

                <!-- Title -->
                <div class="mb-1 font-semibold">
                  {color.name}
                </div>

                <!-- Description -->
                <div class="text-sm leading-snug text-fg-muted dark:text-dark-fg-muted">
                  {color.description}
                </div>

                <!-- Hex values -->
                <div class="mt-3 text-xs font-mono text-fg-muted dark:text-dark-fg-muted">
                  {
                    isSame ? (
                      <button
                        class="hover:opacity-75"
                        onclick={`navigator.clipboard.writeText('${color.light}')`}
                      >
                        {color.light}
                      </button>
                    ) : (
                      <>
                        <button
                          class="hover:opacity-75 mr-2"
                          onclick={`navigator.clipboard.writeText('${color.light}')`}
                        >
                          Light: {color.light}
                        </button>
                        <button
                          class="hover:opacity-75"
                          onclick={`navigator.clipboard.writeText('${color.dark}')`}
                        >
                          Dark: {color.dark}
                        </button>
                      </>
                    )
                  }
                </div>
              </div>
            );
          })
        }
      </div>
    </Prose>

      
  </Container>
</BaseLayout>
